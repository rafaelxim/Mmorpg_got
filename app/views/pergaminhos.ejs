<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% for(var i =0; i<acoes.length;i++){ %>
			<% var txt_acao = '';

				switch(parseInt(acoes[i].acao)){
					case 1: txt_acao= ' guys collecting resources'; break;
					case 2: txt_acao= ' killings programmed'; break;
					case 3: txt_acao= ' in history training'; break;
					case 4: txt_acao= ' in magic training'; break;
				}				

			var date= new Date();
			var momento_atual = date.getTime();
			var segundos_restantes = Math.round((acoes[i].acao_termina_em - momento_atual)/1000);
			%>
			<li> <%= acoes[i].quantidade %> <%= txt_acao %> -- <span class='tempo_restante'><%= segundos_restantes %></span>seconds remaining -- <a href='/revogar_acao?id_acao=<%=acoes[i]._id%>'> Cancel </a> </li>
		<% } %>
	</ul>
</div> 